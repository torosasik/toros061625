  <script>
    // Use the same JS logic as the pop-up, but for inline
    document.querySelectorAll('#ovg-overage input[name="properties[OVERAGE]"]').forEach(radio => {
      radio.addEventListener('change', function () {
        const manualWrapper = document.querySelector('#ovg-manual-input-wrapper');
        document.querySelectorAll('.ovg-info-text').forEach(text => text.style.display = 'none');
        if (this.value === 'manual') {
          manualWrapper.classList.add('show');
          document.querySelector('#ovg-info-manual').style.display = 'block';
          const manualField = document.querySelector('#manualInputFieldOVG');
          if (!manualField.value || manualField.value === '') {
            manualField.value = '20';
          }
          manualField.focus();
          manualField.select();
        } else {
          manualWrapper.classList.remove('show');
          if (this.value === '0.10') {
            document.querySelector('#ovg-info-10').style.display = 'block';
          } else if (this.value === '0.15') {
            document.querySelector('#ovg-info-15').style.display = 'block';
          } else if (this.value === 'no_overage') {
            document.querySelector('#ovg-info-no').style.display = 'block';
          }
        }
      });
    });
    // Conversion logic for SQ. FT and Boxes
    function updateBoxAndSqftFields() {
      const sqftInput = document.getElementById('ovg-calculator-footage');
      const boxInput = document.getElementById('ovg-calculator-boxes');
      const boxSize = {{ box_area_clean | default: 1 }};
      let isBoxChange = false;
      boxInput.addEventListener('input', function() {
        isBoxChange = true;
        const boxes = parseFloat(boxInput.value) || 0;
        sqftInput.value = (boxes * boxSize).toFixed(2);
        triggerOverageCalc();
      });
      sqftInput.addEventListener('input', function() {
        if (!isBoxChange) {
          const sqft = parseFloat(sqftInput.value) || 0;
          boxInput.value = Math.ceil(sqft / boxSize);
        }
        isBoxChange = false;
        triggerOverageCalc();
      });
    }
    function triggerOverageCalc() {
      if (typeof calculateOverageInline === 'function') {
        calculateOverageInline();
      }
    }
    // Inline calculation logic (copy from pop-up, but update selectors)
    function calculateOverageInline() {
      const sqft = parseFloat(document.getElementById('ovg-calculator-footage').value) || 0;
      const boxSize = {{ box_area_clean | default: 1 }};
      const productPrice = {{ product.price | divided_by: 100.00 }};
      const overageRadios = document.querySelectorAll('#ovg-overage input[name="properties[OVERAGE]"]');
      let overage = 0;
      let selectedOverage = '0.10';
      overageRadios.forEach(radio => { if (radio.checked) selectedOverage = radio.value; });
      if (selectedOverage === 'manual') {
        const manualVal = parseFloat(document.getElementById('manualInputFieldOVG').value) || 0;
        overage = manualVal / 100;
      } else if (selectedOverage === 'no_overage') {
        overage = 0;
      } else {
        overage = parseFloat(selectedOverage);
      }
      const overageAmount = sqft * overage;
      const total = sqft * (1 + overage);
      const boxesNeeded = Math.max(1, Math.round(total / boxSize));
      const totalPrice = productPrice * boxesNeeded;
      document.getElementById('ovg-overage-value').textContent = overageAmount.toFixed(2) + ' Sq. Ft.';
      document.getElementById('ovg-total-value').textContent = total.toFixed(2) + ' Sq. Ft.';
      document.getElementById('ovg-boxes-needed-value').textContent = boxesNeeded;
      document.getElementById('ovg-total-price-value').textContent = '$' + totalPrice.toFixed(2);
    }
    document.addEventListener('DOMContentLoaded', function() {
      updateBoxAndSqftFields();
      triggerOverageCalc();
      document.getElementById('manualInputFieldOVG').addEventListener('input', triggerOverageCalc);
      document.querySelectorAll('#ovg-overage input[name="properties[OVERAGE]"]').forEach(radio => {
        radio.addEventListener('change', triggerOverageCalc);
      });
    });
  </script>

{% comment %}
  Toros Swiper Section - Streamlined Customizer Version
  Shows only your selected settings in the Customizer. All other design/system settings are in the code.
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<style>
  .toros-swiper-section {
    background: #FFFFFF;
    margin-top: 0px;
    margin-bottom: 0px;
    padding-top: 36px;
    padding-bottom: 36px;
    padding-left: 0px;
    padding-right: 0px;
    max-width: 1200px;
    width: 100%;
    border: 0px solid #000000;
    {% if section.settings.full_width %}max-width: 100vw; width: 100vw;{% endif %}
  }
  .my-mosaic-slider {
    margin: 0 auto 40px auto;
  }
  .my-mosaic-slider .swiper-wrapper {
    gap: {{ section.settings.slide_gap | default: 20 }}px;
  }
  .my-mosaic-slider .swiper-slide {
    background: #fff;
    border-radius: {{ section.settings.slide_border_radius }}px;
    box-shadow: {% if section.settings.slide_shadow %}0 8px 32px #00000022{% else %}none{% endif %};
    overflow: hidden;
    text-align: center;
    transition: box-shadow 0.2s;
    padding: {{ section.settings.slide_padding_vertical }}px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: {% if section.settings.show_border %}1px solid {{ section.settings.slide_border_color }}{% else %}0px solid transparent{% endif %};
    aspect-ratio: {% if section.settings.card_aspect_ratio == 'portrait' %}3/4{% else %}1/1{% endif %};
    position: relative;
  }
  @media (max-width: 768px) {
    .my-mosaic-slider .swiper-slide {
      padding: {{ section.settings.slide_padding_vertical_mobile }}px 0;
      border-radius: {{ section.settings.slide_border_radius }}px;
      aspect-ratio: {% if section.settings.card_aspect_ratio_mobile == 'portrait' %}3/4{% else %}1/1{% endif %};
    }
  }
  .my-mosaic-slider .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ section.settings.slide_border_radius }}px {{ section.settings.slide_border_radius }}px 0 0;
    margin: 0 auto;
  }
  .slide-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }
  .my-mosaic-slider .slide-label {
    margin: 12px auto 0 auto;
    padding: 6px 22px;
    border-radius: 16px;
    background: transparent;
    color: #E1E7F5;
    font-size: {{ section.settings.slide_heading_size }}px;
    font-family: {% if section.settings.slide_heading_font == "Josefin Sans Bold" %}'Josefin Sans', sans-serif{% else %}inherit{% endif %};
    font-weight: bold;
    line-height: 1;
    max-width: 280px;
    white-space: normal;
    text-align: center;
  }
  @media (max-width: 768px) {
    .my-mosaic-slider .slide-label {
      font-size: {{ section.settings.slide_heading_size_mobile }}px;
    }
  }
  .my-mosaic-slider .swiper-btn {
    margin-top: {{ section.settings.button_margin_top }}px;
    font-size: {{ section.settings.button_size }}px;
    font-family: {% if section.settings.button_font == "Josefin Sans" %}'Josefin Sans', sans-serif{% else %}inherit{% endif %};
    font-weight: normal;
    line-height: 1;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_thickness }}px solid #fff;
    color: #1C4170;
    background: #E1E7F5;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
  }
  .my-mosaic-slider .swiper-btn:hover {
    color: #fff;
    background: #1C4170;
    border-color: #fff;
  }
  .my-mosaic-slider .swiper-button-next,
  .my-mosaic-slider .swiper-button-prev {
    color: #000;
    background: #fff;
    border-radius: 50%;
    border: 1px solid #e1e7f5;
    width: 50px;
    height: 50px;
    font-size: 20px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px #0001;
    transition: all 0.2s;
    cursor: pointer;
    z-index: 2;
  }
  .my-mosaic-slider .swiper-button-next:hover,
  .my-mosaic-slider .swiper-button-prev:hover {
    background: #1C4170;
    color: #fff;
    border-color: #1C4170;
  }
  .my-mosaic-slider .swiper-button-next::after,
  .my-mosaic-slider .swiper-button-prev::after {
    content: '';
    display: block;
    width: 20px;
    height: 20px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
  }
  .my-mosaic-slider .swiper-button-next::after {
    background-image: url('data:image/svg+xml;utf8,<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7 5L12 10L7 15" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>');
  }
  .my-mosaic-slider .swiper-button-prev::after {
    background-image: url('data:image/svg+xml;utf8,<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M13 5L8 10L13 15" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>');
  }
  .my-mosaic-slider .swiper-button-next:hover::after,
  .my-mosaic-slider .swiper-button-prev:hover::after {
    filter: invert(1);
  }
  @media (max-width: 768px) {
    .my-mosaic-slider .swiper-button-next,
    .my-mosaic-slider .swiper-button-prev {
      width: 32px;
      height: 32px;
      font-size: 12px;
    }
    .my-mosaic-slider .swiper-button-next::after,
    .my-mosaic-slider .swiper-button-prev::after {
      width: 14px;
      height: 14px;
    }
  }
</style>

<div class="toros-swiper-section">
  <div class="swiper my-mosaic-slider">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% assign collection_handle = block.settings.collection_url | split: '/' | last %}
          {% assign collection = collections[collection_handle] %}
          {% assign collection_img = block.settings.collection_image | default: collection.image | default: '' %}
          <a href="{{ block.settings.collection_url }}">
            {% if collection_img != blank %}
              <img src="{{ collection_img | img_url: '600x' }}" alt="{{ block.settings.collection_label }}">
            {% endif %}
            <div class="slide-content">
              {% if section.settings.show_text %}
                <div class="slide-label">{{ block.settings.collection_label }}</div>
              {% endif %}
              {% if section.settings.show_button and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_url }}" class="swiper-btn">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  setTimeout(function() {
    new Swiper('.my-mosaic-slider', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: {{ section.settings.slider_per_view }},
      spaceBetween: {{ section.settings.slide_gap | default: 20 }},
      loop: true,
      coverflowEffect: {
        rotate: {{ section.settings.slide_rotate }},
        stretch: 0,
        depth: 180,
        modifier: 1,
        slideShadows: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        0: { slidesPerView: {{ section.settings.slider_per_view_mobile }}, spaceBetween: {{ section.settings.slide_gap | default: 20 }} },
        600: { slidesPerView: {{ section.settings.slider_per_view_mobile }}, spaceBetween: {{ section.settings.slide_gap | default: 20 }} },
        900: { slidesPerView: {{ section.settings.slider_per_view }}, spaceBetween: {{ section.settings.slide_gap | default: 20 }} },
        1200: { slidesPerView: {{ section.settings.slider_per_view }}, spaceBetween: {{ section.settings.slide_gap | default: 20 }} }
      }
    });
  }, 300);
</script>

{% schema %}
{
  "name": "Toros Swiper",
  "tag": "section",
  "settings": [
    { "type": "range", "id": "slider_per_view", "label": "Slides Per View", "min": 1, "max": 8, "step": 0.1, "default": 5 },
    { "type": "range", "id": "slider_per_view_mobile", "label": "Slides Per View - Mobile", "min": 1, "max": 3, "step": 0.1, "default": 1.5 },
    { "type": "range", "id": "slide_rotate", "label": "Slides Rotate", "min": 0, "max": 40, "step": 1, "default": 20 },
    { "type": "range", "id": "slide_padding_vertical", "label": "Slide Padding Vertical", "min": 0, "max": 20, "step": 1, "default": 6 },
    { "type": "range", "id": "slide_padding_vertical_mobile", "label": "Slide Padding Vertical - Mobile", "min": 0, "max": 20, "step": 1, "default": 4 },
    { "type": "range", "id": "slide_border_radius", "label": "Slide Border Radius", "min": 0, "max": 20, "step": 1, "default": 10 },
    { "type": "checkbox", "id": "slide_shadow", "label": "Slide Box Shadow On/Off", "default": true },
    { "type": "range", "id": "slide_gap", "label": "Gap Between Slides (px)", "min": 0, "max": 60, "step": 1, "default": 20 },
    { "type": "select", "id": "card_aspect_ratio", "label": "Card Aspect Ratio", "options": [
      { "value": "portrait", "label": "Portrait" },
      { "value": "square", "label": "Square" }
    ], "default": "portrait" },
    { "type": "select", "id": "card_aspect_ratio_mobile", "label": "Card Aspect Ratio - Mobile", "options": [
      { "value": "portrait", "label": "Portrait" },
      { "value": "square", "label": "Square" }
    ], "default": "portrait" },
    { "type": "color", "id": "slide_border_color", "label": "Slide Border Color", "default": "#000000" },
    { "type": "color", "id": "slide_shadow_color", "label": "Slide Shadow Color", "default": "#000000" },
    { "type": "color", "id": "slide_title_color", "label": "Slide Title Color", "default": "#E1E7F5" },
    { "type": "range", "id": "slide_heading_size", "label": "Slide Heading Size", "min": 10, "max": 40, "step": 1, "default": 28 },
    { "type": "range", "id": "slide_heading_size_mobile", "label": "Slide Heading Size - Mobile", "min": 10, "max": 32, "step": 1, "default": 18 },
    { "type": "select", "id": "slide_heading_font", "label": "Slide Heading Font Family", "options": [
      { "value": "Josefin Sans Bold", "label": "Josefin Sans Bold" },
      { "value": "inherit", "label": "Theme Default" }
    ], "default": "Josefin Sans Bold" },
    { "type": "range", "id": "button_size", "label": "Button Size", "min": 10, "max": 32, "step": 1, "default": 16 },
    { "type": "range", "id": "button_size_mobile", "label": "Button Size - Mobile", "min": 10, "max": 24, "step": 1, "default": 14 },
    { "type": "range", "id": "button_margin_top", "label": "Button Margin Top", "min": 0, "max": 40, "step": 1, "default": 0 },
    { "type": "range", "id": "button_padding_vertical", "label": "Button Padding Vertical", "min": 0, "max": 32, "step": 1, "default": 12 },
    { "type": "range", "id": "button_padding_horizontal", "label": "Button Padding Horizontal", "min": 0, "max": 32, "step": 1, "default": 12 },
    { "type": "range", "id": "button_border_radius", "label": "Button Border Radius", "min": 0, "max": 40, "step": 1, "default": 16 },
    { "type": "range", "id": "button_border_thickness", "label": "Button Border Thickness", "min": 0, "max": 10, "step": 1, "default": 0 },
    { "type": "select", "id": "button_font", "label": "Button Font Family", "options": [
      { "value": "Josefin Sans", "label": "Josefin Sans" },
      { "value": "inherit", "label": "Theme Default" }
    ], "default": "Josefin Sans" },
    { "type": "checkbox", "id": "show_button", "label": "Show Button", "default": true },
    { "type": "checkbox", "id": "show_text", "label": "Show Text", "default": true },
    { "type": "checkbox", "id": "show_border", "label": "Show Border", "default": true }
  ],
  "blocks": [
    {
      "type": "collection_slide",
      "name": "Collection Slide",
      "settings": [
        { "type": "url", "id": "collection_url", "label": "Collection Link" },
        { "type": "image_picker", "id": "collection_image", "label": "Collection Image" },
        { "type": "text", "id": "collection_label", "label": "Collection Name" },
        { "type": "text", "id": "button_text", "label": "Button Text" },
        { "type": "url", "id": "button_url", "label": "Button URL" }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    { "name": "Toros Swiper", "category": "Custom" }
  ]
}
{% endschema %}
